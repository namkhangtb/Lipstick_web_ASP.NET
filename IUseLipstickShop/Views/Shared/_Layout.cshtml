    <div class="layout-main">
        <div class="bia-1">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")">
                    <img src="@Url.Content("~/Content/img/logo.jpg")">
                </a>
            </div>
        </div>
        <div class="bia-2">
            <div class="logo-2">
                <a href="#"><img onclick="openSearch()" src="~/Content/img/seach.jpg"></a>
